{
  "name": "muhass",
  "version": "1.0.0",
  "scripts": {
    "expo": "expo start ./frontend/",
    "dev": "concurrently \"npm run ble\" \"npm run expo\"",
    "ble": "python3 ./bluetooth-server/ble.py",
    "server": "nodemon ./backend/server.js",
    "generate": "npx prisma generate --schema ./backend/prisma/schema.prisma"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@expo/cli": "^0.17.5",
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "react-native": "0.73.4",
    "react": "18.2.0"
  }
}
